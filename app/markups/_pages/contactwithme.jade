extends ../main
block description
	meta(name="description" content="Форма обратной связи с Web разработчиком Гордиенко Валентином.")
block title
	| Контакты. Web разработчик фрилансер Гордиенко Валентин.
block reCaptcha
	//RECAPTCHA SCRIPT
	script(src='https://www.google.com/recaptcha/api.js')
block sidebar
	section.sidebar
		+menu-navigation(3,"side-bar__item")
		+menu-contacts("side-bar__item")
block content
	//FEEDBACK FORM
	article.page-content-item
		h2.page-content-item__header У вас интересный проект? Напишите мне
		div.page-content-item__conteiner.clearfix
			form#contactForms.feedback-form(action="#")
				div.feedback-form__item.feedback-form__name.float-left
					label.feedback-form__item-label(for="feedback-form__name") Ваше имя
					input#feedback-form__name.feedback-form__item-input.qtipBlock(type="text" name="name" placeholder="Как к вам обращаться?" qtip-content="Может быть всё-таки по имени?" qtip-position="left")
				div.feedback-form__item.feedback-form__email.float-right
					label.feedback-form__item-label(for="feedback-form__email") Ваш email
					input#feedback-form__email.feedback-form__item-input.qtipBlock(type="email" name="email" placeholder="Куда мне писать" qtip-content="Куда мне вам ответить?" qtip-position="right")
				div.feedback-form__item
					label.feedback-form__item-label(for="feedback-form__message") Сообщение
					textarea#feedback-form__message.feedback-form__item-textarea.qtipBlock(name="message" placeholder="Кратко в чём суть" qtip-content="О чём будем общаться?" qtip-position="left")
				div.feedback-form__item
					p.feedback-form__item-label.text-center Пройдите проверку
					div.qtipBlock.g-recaptcha(qtip-content="Вы же не робот?" qtip-position="left" data-sitekey="6LcR9SITAAAAAMS5fuWrC6Bd7VcnBvUQPS__6DtZ")
				div.feedback-form__item
					input.feedback-form__item-button.button.button--green.float-left(type="submit" value="Отправить")
					input.feedback-form__item-button.button.float-right(type="reset" value="Очистить")